<%= render :partial => 'shared/error_messages', :locals => {:f => @anaind} %>
<%= form_for @anaind do |f| %>
  <div class="row">
    <div class="twelve columns">
      <fieldset>
        <legend> Dati indirizzo </legend>
        <div class="ten columns offset-by-one">
          <%= hidden_field(:anaind, :anagen_id) %>
          <%= f.label "Indirizzo valido come:" %>
          <%= check_box :anaind, :flsl, {}, 'S', 'N' %> <b> Sede legale </b> <br /> 
          <%= check_box :anaind, :flsp, {}, 'S', 'N' %> <b> Indirizzo di spedizione </b> <br />
          <%= check_box :anaind, :flmg, {}, 'S', 'N' %> <b> Indirizzo di magazzino </b> <br /> <br />
        </div>
        <div class="ten columns offset-by-one">
          <%= f.label "Indirizzo" %>
          <%= f.text_field :indir %>
        </div>
        <div class="four columns offset-by-one">
          <%= f.label "Localita" %>
          <%= collection_select(:anaind, :localita_id, Localita.all, :id, :descriz,
                                {:include_blank => true},
                                  {:data => {:remote => true, :url => url_for(:controller => :anainds,
                                                                              :action => :descrizloc)}})%>
        </div>
        <div class="three columns">
          <%= f.label "Cap" %>
          <%= f.text_field :cap %>
        </div>
        <div class="three columns">
          <%= f.label "Indirizzo valido per:" %>
          <%= select(:anaind, :nrmag, (Anaind::NRMAG).invert.sort) %>
        </div>
        <div class="ten columns offset-by-one">
          <%= f.text_field(:desloc, {:data => {:remote => true,
                                               :url => url_for(:controller => :anainds,
                                                               :action => :reset_locid)}}) %>
        </div>
        <hr />
        <div class="ten columns offset-by-one">
          <%= f.submit 'SALVA', :class => "button radius small" %>
          <%= link_to 'ANNULLA', @anaind, :class => "button radius small" %>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>
