<% if f.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(f.errors.count, "error") %>
      prohibited this from being saved:
    </h2>
    <p>There were problems with the following fields:</p>
    <ul>
      <% f.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
