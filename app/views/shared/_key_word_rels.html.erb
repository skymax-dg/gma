<div class="row">
  <div class="six columns">
    <table>
      <thead>
        <tr>
          <th>Key Word Associate</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% items.each do |item| %>
          <tr>
            <td><%= item.key_word.get_dinasty %></td>
            <td>
              <%= link_to '', manage_key_word_rels_key_word_path(id: item.key_word.id, mode: 1, kwr_id: item.id), 
                confirm: 'Confermi?', class: "button radius tiny alert foundicon-trash", title: "Cancella" %>
            </td>
          </tr>
        <% end %>
        </tbody>
    </table>
  </div>
  <div class="six columns">
    <table>
      <thead>
        <tr>
          <th>Key Word Associabili</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% items_addable.each do |item| %>
          <% if item.leaf? %>
            <tr>
              <td><%= item.get_dinasty %></td>
              <td>
                <%= link_to '', manage_key_word_rels_key_word_path(id: item.id, mode: 0, ot_id: id, ot_cls: cls),
                  class: "button radius tiny success foundicon-plus", title: "Aggiungi" %>
              </td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
    </table>
  </div>
</div>
