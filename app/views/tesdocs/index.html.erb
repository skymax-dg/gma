<div class="row">
  <div class="twelve columns">
    <div class="panel pagetitle">
      <%= @title %>
    </div>
  </div>
</div>
<div class="row">
  <div class="twelve columns">
    <div class="panel">
      <%= render :partial => 'filter' %>
    </div>
    <div class="panel">
      <div class="row">
        <div class="twelve columns">
          <ul class="button-group [radius, rounded]">
            <li>
              <%= link_to 'Aggiungi documento', new_tesdoc_path(:causmag => @causmagfilter||"",
                                                                :conto   => @contofilter||""), :remote => true,
                                                                :class => "button radius small" %>
            </li>
            <li>
              <%= link_to 'Carica Testate e righe doc', addtesrigdoc_fromxls_tesdocs_path, 
                          :confirm => 'Confermi caricamento da Exel?', :class => "button radius small" %>
            </li>
          </ul>
        </div>
      </div>
      <table>
        <thead>
          <th width="12%">Nr doc</th>
          <th width="13%">Del</th>
          <th width="35%">Causale</th>
          <th width="35%">ContoAnagrafica</th>
          <th width="5%"></th>
        </thead>
        <tbody>
            <%= render :partial => 'line', :collection => @tesdocs unless @tesdocs.nil?||@tesdocs.empty? %>
        </tbody>
      </table>
      <%= will_paginate @tesdocs unless @tesdocs.nil? %>
    </div>
  </div>
</div>

