<fieldset>
  <legend> Ricerca anagrafiche </legend>
  <%= form_tag(:filter_anagens, :method => :get) do %>
  <%= hidden_field_tag :type, params[:type] %>
    <div class="three columns">
      <%= select_tag("tpfilter",
                     options_for_select([["Ragione sociale", "RS"], ["Codice fiscale", "CF"],
                                         ["Partiva iva", "PI"]], @tpfilter)) %>
    </div>
    <div class="five columns">
      <%= text_field_tag "desfilter", @desfilter %>
    </div>
    <div class="four columns">
      <i class="foundicon-search">
        <%= submit_tag 'RICERCA', :class => "button radius small search foundicon-search", :title => "Esegui Ricerca" %>
      </i>
    </div>
  <% end %>
</fieldset>
