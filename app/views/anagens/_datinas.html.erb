<% if @anagen.tipo == "G" %>
  <% @anagen.luogonas_id = nil %>
  <% @anagen.dtnas = "" %>
  <% @anagen.sesso = "" %>
<% else %>
  <b> Luogo di nascita </b>
  <%= collection_select :anagen, :luogonas_id,
                        Localita.all, :id, :descriz,
                        {:include_blank => true} %>
  <b> Data di nascita </b>
  <%= date_select :anagen, 
                  :dtnas, 
                  {:order => [:day, :month, :year], 
                   :use_short_month => true,
                   :start_year => 1900,
                   :include_blank => true} %>
  <b> Sesso </b>
  <%= select(:anagen, :sesso, ["M","F"], { :include_blank => true })%>
<% end %>
