<%= render :partial => 'shared/page_title', :locals => {:record => nil} %>
<ul class="button-group">
  <li>
    <%= link_to 'NUOVO', new_iva_path, :class => "button radius small new foundicon-add-doc" %>
  </li>
</ul>
<% unless @ivas.nil?||@ivas.empty? %>
  <table>
    <thead>
      <tr>
        <th class="integer" width="8%">Codice</th>
        <th width="12%">Descr.</th>
        <th width="53%">Descr.Estesa</th>
        <th class="float" width="5%">Aliquota</th>
        <th width="5%">Esenzione</th>
        <th width="17%"></th>
      </tr>
    </thead>
    <tbody>
        <%= render :partial => 'line', :collection => @ivas %>
    </tbody>
  </table>
  <%= will_paginate @ivas %>
<% end %>
