<%= render :partial => 'shared/error_messages', :locals => {:f => @iva} %>
<%= form_for(@iva) do |f| %>

  <div class="field">
    <b> <%= f.label :codice %> </b> <br />
    <%= f.number_field :codice %>
  </div>
  <div class="field">
    <b> <%= f.label :descrizione %> </b> <br />
    <%= f.text_field :descriz %>
  </div>
  <div class="field">
    <b> <%= f.label "descrizione estesa (Stampa)" %> </b> <br />
    <%= f.text_field :desest %>
  </div>
  <div class="field">
    <b> <%= f.label "Aliquota IVA %" %> </b> <br />
    <%= f.number_field :aliq %>
  </div>
  <div class="field">
    <%= check_box :iva, :flese, {}, 'S', 'N' %> <b> Esenzione </b> <br /> 
  </div>
  <div class="actions">
    <%= f.submit "SALVA"%>
  </div>
<% end %>
