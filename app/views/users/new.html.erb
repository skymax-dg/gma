<h1><%= @title %></h1>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
	  <%= f.label :login %>
	  <br />
	  <%= f.text_field :login %>
	</div>
	<div class="field">
	  <%= f.label :pwd %>
	  <br />
	  <%= f.password_field :pwd %>
	</div>
	<div class="field">
	  <%= f.label :pwd_confirmation, "Confirmation" %>
	  <br />
	  <%= f.password_field :pwd_confirmation %>
	</div>
  <div class="actions">
	  <%= f.submit "Registra" %>
  </div>
<% end %>
