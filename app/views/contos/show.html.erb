<%= render :partial => 'shared/page_title', :locals => {:record => nil} %>
<ul class="button-group">
  <li>
    <%= link_to 'INDIETRO', resque_location(contos_path), :class => "button radius small back foundicon-left-arrow" %>
  </li>
  <li>
    <%= link_to 'MODIFICA', edit_conto_path(@conto), :class => "button radius small modify foundicon-edit" %>
  </li>
  <li>
    <%= link_to 'ELIMINA', @conto, :confirm => 'Confermi eliminazione?',
                                   :method => :delete, :class => "button radius small alert foundicon-trash" %>
  </li>
</ul>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Codice:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= @conto.codice %>
  </div>
</div>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Descrizione:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= @conto.descriz %>
  </div>
</div>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Anagrafica:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= @conto.anagen&&@conto.anagen.denomin %>
  </div>
</div>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Riferimento:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= Conto::TIPOCONTO[@conto.tipoconto] %>
  </div>
</div>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Tipo conto:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= Conto::TIPOPEO[@conto.tipopeo] %>
  </div>
</div>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Contropartita:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= Conto::TIPOPEO[@conto.cntrpartita] %>
  </div>
</div>
<div class="row">
  <div class="two columns">
    <%= label @conto, "Sconto:", :class => "right" %>
  </div>
  <div class="ten columns">
    <%= Conto::TIPOPEO[@conto.sconto] %>
  </div>
</div>
