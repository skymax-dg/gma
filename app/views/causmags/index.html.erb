<%= render :partial => 'shared/page_title', :locals => {:record => nil} %>
<ul class="button-group">
  <li>
    <%= link_to "NUOVA", new_causmag_path, :class => "button radius small new foundicon-add-doc" %>
  </li>
</ul>
<% unless @causmags.nil?||@causmags.empty? %>
  <table>
    <thead>
      <tr>
        <th width="10%">Grp</th>
        <th width="40%">Descrizione</th>
        <th width="10%">Tipo</th>
        <th width="5%">Mag</th>
        <th width="5%">Cnt</th>
        <th width="5%">Prg</th>
        <th width="5%">Src</th>
        <th width="5%">Dst</th>
        <th width="15%"></th>
      </tr>
    </thead>
    <tbody>
        <%= render :partial => 'line', :collection => @causmags %>
    </tbody>
  </table>
<%= will_paginate @causmags %>
<% end %>
