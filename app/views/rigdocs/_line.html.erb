<tr>
  <td><%= line.article.codice unless line.article.nil? %></td>
  <td><%= line.descriz %></td>
  <td align=right ><%= line.qta %></td>
  <td align=right ><%= number_to_currency(line.prezzo) %></td>
  <td align=right ><%= line.sconto %></td>
  <td align=right ><%= number_to_currency(line.qta * line.prezzo) %></td>
  <td align=right ><%= line.iva.nil? ? " " : line.iva.descriz %></td>
  <td><%= link_to 'Dettaglio', line %></td>
  <td><%= link_to 'SU''', up_rigdoc_path(:id => line.id) %></td>
  <td><%= link_to 'GIU''', down_rigdoc_path(:id => line.id) %></td>
</tr>