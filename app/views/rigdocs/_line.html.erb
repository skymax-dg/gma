<tr>
  <td><%= line.article.codice unless line.article.nil? %></td>
  <td><%= line.descriz %></td>
  <td class="float"><%= line.qta if line.qta > 0 %></td>
  <td class="currency"><%= number_to_currency(line.prezzo) if line.qta > 0 %></td>
  <td class="float"><%= line.sconto if line.qta > 0 %></td>
  <td class="currency"><%= number_to_currency(line.qta * line.prezzo) if line.qta > 0 %></td>
  <td>
    <%= link_to 'D', line,
                     :class => "button radius tiny", :title => "Dettaglio" %>
    <%= link_to 'S', up_rigdoc_path(:id=>line.id, :page=>@page),
                     :class => "button radius tiny", :title => "Sposta su'" %>
    <%= link_to 'G', down_rigdoc_path(:id => line.id, :page=>@page),
                     :class => "button radius tiny", :title => "Sposta giu'" %>
  </td>
</tr>