<div class="row">
  <div class="twelve columns">
    <div class="panel pagetitle">
      <%= @title %>
    </div>
  </div>
</div>
<div class="row">
  <div class="twelve columns">
    <fieldset>
      <legend> Dati localita' </legend>
      <div class="row">
        <div class="two columns offset-by-one">
          <b>Descrizione:</b>
        </div>
        <div class="six columns">
          <%= @localita.descriz %>
        </div>
        <div class="three columns"></div>
      </div>
      <div class="row">
        <div class="two columns offset-by-one">
          <b>Provincia:</b>
        </div>
        <div class="one columns">
          <%= @localita.prov %>
        </div>
        <div class="one columns">
          <b>Cap:</b>
        </div>
        <div class="two columns">
          <%= @localita.cap %>
        </div>
        <div class="one columns">
          <b>Codfis:</b>
        </div>
        <div class="one columns">
          <%= @localita.codfis %>
        </div>
        <div class="three columns"></div>
      </div>
      <div class="row">
        <div class="two columns offset-by-one">
          <b>Stato/Nazione</b>
        </div>
        <div class="six columns">
          <%= @localita.paese.descriz %>
        </div>
        <div class="three columns"></div>
      </div>
    </fieldset>
  </div>
</div>
<div class="row">
  <div class="twelve columns">
    <ul class="button-group [radius, rounded]">
      <li>
        <%= link_to 'Indietro', localitas_path, :class => "button radius" %>
      </li>
      <li>
        <%= link_to 'Modifica', edit_localita_path(@localita), :class => "button radius" %>
      </li>
    </ul>
  </div>
</div>
