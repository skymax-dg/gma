<%= form_for(@coupon) do |f| %>
  <%= f.hidden_field :anagen_id, value: @anagen ? @anagen.id : 0 %>
  <%= f.hidden_field :state, value: params[:state] if params[:state] %>
  <div class="row">
    <div class="five columns">
      <%= f.label "Descrizione" %>
      <%= f.text_field :code, max_length: 30 %>
    </div>
  </div>

  <div class="row">
    <div class="two columns">
      <%= jdate_field(:coupon, :dt_start, "Data inizio", :date=>true, :value => @coupon.dt_start, :readonly => true) %>
    </div>
    <div class="one columns"></div>
    <div class="two columns">
      <%= jdate_field(:coupon, :dt_end, "Data fine", :date=>true, :value => @coupon.dt_end, :readonly => true) %>
    </div>
    <div class="one columns"></div>
    <div class="two columns">
      <%= f.label "Ordine minimo:" %>
      <%= f.number_field :ord_min %>
    </div>
    <div class="four columns"></div>
  </div>

  <div class="row">
    <div class="two columns">
      <%= f.label "Valore coupon:" %>
      <%= f.number_field :value %>
    </div>
    <div class="one columns"></div>
    <div class="two columns">
      <%= f.label "Percentuale coupon:" %>
      <%= f.number_field :perc %>
    </div>
    <div class="one columns"></div>
    <div class="two columns">
      <%= f.label "Toglie spese sped?" %>
      <%= f.select(:togli_spese_spedizione, Coupon::SPEDIZ, { :prompt => false}) %>
    </div>
    <div class="four columns"></div>
  </div>

  <% if @state == 2 %>
    <div class="row">
      <div class="two columns">
        <%= f.label "Codice sconto:" %>
        <%= f.text_field :discount_code %>
      </div>
      <div class="one columns"></div>
      <div class="two columns">
        <%= f.label "Codice articolo" %>
        <%= text_field_tag :article_code %>
      </div>
      <div class="four columns"></div>
    </div>
  <% end %>

  <div class="row">
    <div class="twelve columns">
      <%= f.submit 'SALVA', :class => "button radius small success foundicon-checkmark" %>
      <%= link_to 'ANNULLA', @anagen || coupons_path, :class => "button radius small cancel foundicon-remove" %>
    </div>
  </div>
<% end %>
