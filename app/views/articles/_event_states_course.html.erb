<div class="row">
  <div class="twelve columns">
    <%= link_to 'Aggiungi', new_event_path(article_id: params[:id]), :class => "button radius small back" %>

    <table>
      <thead>
        <tr>
          <th width="5%">Data</th>
          <th width="10%">Orari</th>
          <th width="15%">Sede</th>
          <th width="18%">Insegnanti</th>
          <th width="18%">Organizzatori</th>
          <th width="10%">Abbigliamento</th>
          <th width="4%">Stato</th>
          <th width="16%"></th>
        </tr>
      </thead>
      <tbody>
        <% events.each do |event| %>
          <tr>
            <td> <%= to_date(event.dt_event) %> </td>
            <td> <%= event.timetable %> </td>
            <td> <%= event.dsite_anagen %> </td>
            <td> <%= event.dteachers %> </td>
            <td> <%= event.dorganizers %> </td>
            <td> <%= event.dressing %> </td>
            <td> <%= event.dstate %> </td>
            <td> <%= render :partial => 'shared/btn_vmc', :locals => {:v_edit => edit_event_path(event), :line => event} %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

