<h1>Stampa Movimenti di magazzino</h1>
<br/>
<%= form_tag(:stp_movmag_article, :method => :get) do %>
  <div class="field">
    Articolo: <%= @article.desest1 %>
  </div>
  <div class="field">
    <b> <%= label_tag "Cliente: " %> </b> <br />
    <%= select_tag(:idanagen,
                   options_from_collection_for_select(@anagens, :id, :denomin),
                   {:include_blank => ""}) unless @anagens.nil?%>
    Le movimentazioni di: <%= Anagen.find(current_user.azienda).denomin %> 
    <%= check_box_tag :anarif, 'S' %>
  </div>
  <div class="field">
    <b> <%= label_tag "Magazzino: " %> </b> <br />
    <% mag = Hash.new %>
    <% Anaind::NRMAG.each {|k,v|mag[k]=v unless k==0} %>
    <%= select_tag(:nrmag, options_for_select(mag.invert.sort), {:include_blank => "", :selected => ""}) %>
    raggruppati:
    <%= check_box_tag :grpmag, 'S' %>
  </div>

  <%= submit_tag 'STAMPA' %>
  <br />
  <br />
  <%= link_to 'Indietro', @article %>
<% end %>
