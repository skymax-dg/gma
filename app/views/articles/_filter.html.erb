<div class="row">
  <div class="twelve columns">
    <fieldset>
      <legend> Ricerca articoli </legend>
      <%= form_tag(:filter_articles, :method => :get) do %>
        <div class="three columns">
          <%= label :filter_articles, "Ricerca per" %>
          <%= select_tag("tpfilter",
                         options_for_select([["Descrizione", "DE"], ["Codice", "CO"]], @tpfilter)) %>
        </div>
        <div class="five columns">
          <%= label :filter_articles, "." %>
          <%= text_field_tag "desfilter", @desfilter %>
        </div>
        <div class="twelve columns">
          <%= submit_tag 'FILTRA', :class => "button radius small" %>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>
<hr />
