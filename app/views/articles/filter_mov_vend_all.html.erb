<div class="row">
  <div class="twelve columns">
    <div class="panel pagetitle">
      <%= @title %>
    </div>
  </div>
</div>

<div class="row">
  <div class="twelve columns">
    <fieldset>
      <legend> Filtro movimenti </legend>

      <%= form_tag(:stp_mov_vend_all_articles, :method => :get) do %>
        <% mag = Hash.new %>
        <% Anaind::NRMAG.each {|k,v|mag[k]=v unless k==0} %>
        <%= hidden_field_tag :tp, @tp %>
<br />
        <div class="row">
          <div class="one columns offset-by-one"></div>
          <div class="ten columns">
            <%= label_tag "TUTTI GLI ARTICOLI DI MAGAZZINO" %>
          </div>
        </div>
<br />
        <div class="row">
          <div class="one columns offset-by-one">
            <%= label_tag "Cliente:" %>
          </div>
          <div class="nine columns">
            <%= select_tag(:idanagen,
                           options_from_collection_for_select(@anagens, :id, :denomin),
                           {:include_blank => ""}) unless @anagens.nil?%>
          </div>
          <div class="one columns"></div>
        </div>
<br />
        <div class="row">
          <div class="one columns offset-by-one">
            <%= check_box_tag :anarif, 'S' %>
          </div>
          <div class="four columns">
            <%= label_tag @tp == "M" ? "Solo le movimentazioni di:" : "Solo le vendite di:" %>
            <%= label_tag Anagen.find(current_user.azienda).denomin %>
          </div>
          <div class="six columns"></div>
        </div>
<br />
        <div class="row">
          <div class="one columns offset-by-one">
            <%= label_tag "Magazzino: " %>
          </div>
          <div class="four columns">
            <%= select_tag(:nrmag, options_for_select(mag.invert.sort), {:include_blank => "", :selected => "", :disabled => @tp=="V"}) %>
          </div>
          <div class="six columns"></div>
        </div>
<br />
        <div class="row">
          <div class="one columns offset-by-one">
            <%= check_box_tag :grpmag, 'S', checked = @tp=="V", {:disabled => @tp=="V"}%>
          </div>
          <div class="two columns">
            <%= label_tag "Magazzini unificati" %>
          </div>
          <div class="eight columns"></div>
        </div>
        <hr />
        <div class="ten columns offset-by-one">
          <%= submit_tag 'STAMPA', :class => "button radius small" %>
          <%= link_to 'Indietro', articles_path, :class => "button radius small" %>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>
